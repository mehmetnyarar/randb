{
  "name": "@app/server",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Back-end server",
  "keywords": [
    "back-end",
    "data access",
    "business logic"
  ],
  "author": "Mehmet N. Yarar <mehmetnyarar@gmail.com>",
  "contributors": [
    "Mehmet N. Yarar <mehmetnyarar@gmail.com>"
  ],
  "scripts": {
    "clean": "rm -rf coverage node_modules yarn*",
    "validate": "npm-run-all typings format lint test:coverage",
    "typings": "tsc --project tsconfig.json --noEmit",
    "format": "prettier --write \"**/*.{js,ts,json,html,css,md}\" --ignore-path .gitignore",
    "lint": "eslint --fix \"**/*.{js,ts}\" --ignore-path .gitignore",
    "precommit": "yarn typings && lint-staged",
    "dev": "nodemon",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "start": "cross-env NODE_ENV=production ts-node --project=tsconfig.server.json -r tsconfig-paths/register src",
    "apollo:push": "apollo service:push"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.3.4",
    "apollo-server-express": "^2.17.0",
    "bcrypt": "^5.0.0",
    "chalk": "^4.1.0",
    "class-validator": "^0.12.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fast-deep-equal": "^3.1.3",
    "fs-extra": "^9.0.1",
    "graphql": "^15.3.0",
    "i18next": "^19.7.0",
    "i18next-fs-backend": "^1.0.7",
    "i18next-http-middleware": "^3.0.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.2",
    "ms": "^2.1.2",
    "nanoid": "^3.1.12",
    "reflect-metadata": "^0.1.13",
    "sanitize-filename": "^1.6.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "type-graphql": "^1.0.0",
    "xlsx": "^0.16.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/fs-extra": "^9.0.1",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/lodash": "^4.14.161",
    "@types/mongoose": "^5.7.36",
    "@types/ms": "^0.7.31",
    "mongodb-memory-server": "^6.6.7",
    "nodemon": "^2.0.4"
  }
}
