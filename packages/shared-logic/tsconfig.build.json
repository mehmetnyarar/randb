{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Basic Options */
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/graphql/documents/**/*.ts",
    "test/**/*.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
